---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import OfferGrid from '../components/OfferGrid.astro';
import MenuCTA from '../components/MenuCTA.astro';
import ReferencesSection from '../components/ReferencesSection.astro';
import GallerySection from '../components/GallerySection.astro';
import BookingFlowSection from '../components/BookingFlowSection.astro';
import AvailabilityCalendarSection from '../components/AvailabilityCalendarSection.astro';
import InquirySection from '../components/InquirySection.astro';
import ContractModal from '../components/ContractModal.astro';
import AboutSection from '../components/AboutSection.astro';
import Footer from '../components/Footer.astro';
---
<BaseLayout>
  <Header />
  <div class="slide-in-panel" aria-hidden="true">
    <div class="container slide-in-panel__inner">
      <p class="slide-in-panel__title">Archie on Tour</p>
      <p class="slide-in-panel__subtitle">Foodtruck Catering direkt zu Ihrem Event</p>
    </div>
  </div>
  <main>
    <Hero />
    <OfferGrid />
    <MenuCTA />
    <ReferencesSection />
    <GallerySection />
    <BookingFlowSection />
    <AvailabilityCalendarSection />
    <InquirySection />
    <ContractModal />
    <AboutSection />
  </main>
  <Footer />
</BaseLayout>
