---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import OfferGrid from '../components/OfferGrid.astro';
import MenuSection from '../components/MenuSection.astro';
import ReferencesSection from '../components/ReferencesSection.astro';
import GallerySection from '../components/GallerySection.astro';
import BookingFlowSection from '../components/BookingFlowSection.astro';
import AvailabilityCalendarSection from '../components/AvailabilityCalendarSection.astro';
import InquirySection from '../components/InquirySection.astro';
import AboutSection from '../components/AboutSection.astro';
---
<BaseLayout>
  <Hero />
  <OfferGrid />
  <MenuSection />
  <ReferencesSection />
  <GallerySection />
  <BookingFlowSection />
  <AvailabilityCalendarSection />
  <InquirySection />
  <AboutSection />
  <script type="module" is:inline>
    import { initRevealAnimations, setupSmoothScroll } from '../lib/scrollReveal';
    import { preventZoom } from '../lib/zoomGuard';
    initRevealAnimations();
    setupSmoothScroll();
    preventZoom();
  </script>
</BaseLayout>
