---
import calendarScript from '../lib/calendar.ts?url';
---
<section id="verfuegbarkeit" class="section">
  <div class="container">
    <div class="section-header">
      <p class="eyebrow">Events &amp; Auftritte</p>
      <h2>Erlebe Archie live und in Farbe</h2>
      <p class="subtitle">
        Schlanke Navigation, klares Raster und gut lesbare Karten – optimiert für Smartphones und große Displays.
      </p>
    </div>

    <div class="card month-view-card">
      <header class="month-view__header">
        <div>
          <p class="eyebrow">Kalender</p>
          <h3>Monatsübersicht</h3>
          <p class="subtitle">Wechsle zwischen den Monaten und sieh alle Termine kompakt auf einen Blick.</p>
        </div>
        <div class="month-controls" aria-label="Kalender Navigation">
          <button id="calendar-prev" class="btn btn-secondary" aria-label="Vorheriger Monat">❮</button>
          <div class="month-label">
            <span class="month-label__hint">Aktueller Monat</span>
            <strong id="calendar-month"></strong>
          </div>
          <button id="calendar-next" class="btn btn-secondary" aria-label="Nächster Monat">❯</button>
        </div>
      </header>

      <div id="calendar-status" class="pill-muted calendar-status" aria-live="polite">
        Kalender wird geladen …
      </div>

      <div class="month-grid" aria-live="polite">
        <div id="calendar-month-grid" class="month-grid__days" aria-live="polite" role="grid"></div>
      </div>

      <div class="month-events">
        <header class="month-events__header">
          <div>
            <p class="eyebrow">Monatsübersicht</p>
            <h4>Alle Termine dieses Monats</h4>
          </div>
        </header>
        <div id="calendar-month-events" class="month-events__list" aria-live="polite"></div>
      </div>
    </div>
  </div>
</section>
<style>
  #verfuegbarkeit h2 {
    color: var(--color-corporate-white);
  }

  #verfuegbarkeit .section-header {
    display: grid;
    gap: var(--space-1);
    margin-bottom: var(--space-4);
    max-width: 760px;
  }

  #verfuegbarkeit .subtitle {
    color: var(--color-muted);
    margin: 0;
  }

  #verfuegbarkeit .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: var(--font-size-xs);
    color: var(--color-muted);
    margin: 0;
  }

  #verfuegbarkeit .month-view-card {
    padding: var(--space-3);
    display: grid;
    gap: var(--space-3);
  }

  #verfuegbarkeit .month-view__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  #verfuegbarkeit .month-controls {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: 8px 10px;
    background: var(--color-surface-strong);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(15, 17, 21, 0.06);
    box-shadow: 0 10px 26px rgba(15, 17, 21, 0.08);
  }

  #verfuegbarkeit .month-label {
    display: grid;
    gap: 2px;
    text-align: center;
  }

  #verfuegbarkeit .month-label__hint {
    font-size: var(--font-size-xs);
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--color-muted);
  }

  #verfuegbarkeit #calendar-month {
    font-size: 1.2rem;
    color: #0f1115;
    text-transform: capitalize;
  }

  #verfuegbarkeit .btn-secondary {
    background: #f2f2f4;
    color: #0f1115;
    border: 1px solid rgba(15, 17, 21, 0.14);
    padding: var(--space-2);
    border-radius: 12px;
    width: 3rem;
    height: 3rem;
    font-size: 1.2rem;
    font-weight: 700;
  }

  #verfuegbarkeit .btn-secondary:hover,
  #verfuegbarkeit .btn-secondary:focus-visible {
    background: #e7e8eb;
    box-shadow: 0 14px 30px rgba(15, 17, 21, 0.12);
  }

  #verfuegbarkeit .calendar-status {
    display: inline-flex;
    width: fit-content;
    padding: 8px 12px;
    border-radius: 999px;
  }

  #verfuegbarkeit .month-grid {
    background: var(--color-surface);
    border: 1px solid rgba(15, 17, 21, 0.08);
    border-radius: var(--radius-lg);
    padding: var(--space-2);
  }

  #verfuegbarkeit .month-grid__days {
    display: grid;
    grid-template-columns: repeat(7, minmax(2.6rem, 1fr));
    gap: 8px;
  }

  #verfuegbarkeit .month-grid__day,
  #verfuegbarkeit .month-grid__spacer {
    min-height: 3.25rem;
    border-radius: 12px;
    display: grid;
    place-items: center;
    font-weight: 700;
  }

  #verfuegbarkeit .month-grid__day {
    border: 1px solid rgba(15, 17, 21, 0.08);
    background: linear-gradient(180deg, rgba(15, 17, 21, 0.02), rgba(255, 255, 255, 0.96));
    color: #0f1115;
  }

  #verfuegbarkeit .month-grid__day:hover,
  #verfuegbarkeit .month-grid__day:focus-visible {
    border-color: rgba(255, 113, 91, 0.35);
    box-shadow: 0 10px 24px rgba(255, 113, 91, 0.12);
  }

  #verfuegbarkeit .month-events {
    background: rgba(15, 17, 21, 0.02);
    border: 1px solid rgba(15, 17, 21, 0.06);
    border-radius: var(--radius-lg);
    padding: var(--space-2);
    display: grid;
    gap: var(--space-2);
  }

  #verfuegbarkeit .month-events__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  #verfuegbarkeit .month-events__list {
    display: grid;
    gap: var(--space-2);
  }

  #verfuegbarkeit .month-event {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-2);
    align-items: center;
    border: 1px solid rgba(15, 17, 21, 0.08);
    border-radius: var(--radius-md);
    padding: var(--space-2);
    background: white;
    transition: box-shadow 160ms ease, transform 160ms ease, border-color 160ms ease;
  }

  #verfuegbarkeit .month-event:hover {
    border-color: rgba(255, 113, 91, 0.35);
    box-shadow: 0 12px 26px rgba(15, 17, 21, 0.12);
    transform: translateY(-2px);
  }

  #verfuegbarkeit .month-event--active {
    border-color: rgba(255, 113, 91, 0.5);
    box-shadow: 0 14px 32px rgba(255, 113, 91, 0.18);
    transform: translateY(-2px);
  }

  #verfuegbarkeit .event-date {
    display: grid;
    gap: 2px;
    text-align: center;
    background: linear-gradient(135deg, #ff715b, #ffb347);
    color: white;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    min-width: 120px;
  }

  #verfuegbarkeit .event-date .weekday {
    font-size: var(--font-size-sm);
    letter-spacing: 0.04em;
    text-transform: uppercase;
    opacity: 0.9;
  }

  #verfuegbarkeit .event-date .day-number {
    font-size: 1.75rem;
    font-weight: 800;
    line-height: 1;
  }

  #verfuegbarkeit .event-content {
    display: grid;
    gap: 6px;
  }

  #verfuegbarkeit .month-event__title {
    margin: 0;
  }

  #verfuegbarkeit .month-event__meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    color: var(--color-muted);
    font-size: var(--font-size-sm);
  }

  #verfuegbarkeit .meta-chip {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 10px;
    border-radius: 999px;
    background: rgba(15, 17, 21, 0.04);
  }

  #verfuegbarkeit .calendar__empty {
    margin: 0;
    color: var(--color-muted);
  }

  @media (max-width: 720px) {
    #verfuegbarkeit .month-view-card {
      padding: var(--space-2);
    }

    #verfuegbarkeit .month-controls {
      width: 100%;
      justify-content: center;
    }

    #verfuegbarkeit .month-grid__days {
      grid-template-columns: repeat(7, minmax(2.2rem, 1fr));
    }

    #verfuegbarkeit .month-event {
      grid-template-columns: 1fr;
    }
  }
</style>
<script type="module" src={calendarScript} defer></script>
