<section id="verfuegbarkeit" class="section">
  <div class="container">
    <h2>Verfügbarkeit</h2>
    <p>Live aus Google Calendar oder als Demo bei fehlender Konfiguration.</p>
    <div class="card">
      <header class="menu-card__header" style="justify-content: space-between;">
        <div>
          <button id="calendar-prev" class="btn btn-secondary" aria-label="Vorheriger Monat">‹</button>
          <button id="calendar-next" class="btn btn-secondary" aria-label="Nächster Monat">›</button>
        </div>
        <strong id="calendar-month"></strong>
      </header>
      <div id="calendar-status" class="price-pill">Kalender wird geladen …</div>
      <div class="calendar__weekdays" style="display:grid;grid-template-columns:repeat(7,1fr);gap:var(--space-2);margin:var(--space-3) 0;">
        {['Mo', 'Di', 'Mi', 'Do', 'Fr', 'Sa', 'So'].map((d) => (
          <div style="text-align:center;font-weight:600;">{d}</div>
        ))}
      </div>
      <div id="calendar-grid" class="grid" style="grid-template-columns: repeat(7, 1fr);"></div>
      <div id="calendar-events" class="cards" style="margin-top: var(--space-4);"></div>
    </div>
  </div>
</section>
<script type="module" src="/src/lib/calendar.ts" defer></script>
